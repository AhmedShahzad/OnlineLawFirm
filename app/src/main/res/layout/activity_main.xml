<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"

    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <TextView
        android:id="@+id/dash"
        android:layout_width="match_parent"
        android:text="Dashboard"
        android:textSize="20dp"
        android:textColor="#fff"
        android:textStyle="bold"
        android:gravity="center"
        android:background="@color/brown"
        android:textAlignment="center"
        android:layout_height="40dp"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:id="@+id/con"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_height="wrap_content">


    <androidx.cardview.widget.CardView
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
           android:id="@+id/cardview"
        android:layout_width="300dp"
        app:cardBackgroundColor="@color/brown"
        android:layout_height="150dp">
   <androidx.constraintlayout.widget.ConstraintLayout
       app:layout_constraintLeft_toLeftOf="parent"
       app:layout_constraintRight_toRightOf="parent"
       android:layout_width="match_parent"
       android:layout_height="match_parent">

           <de.hdodenhof.circleimageview.CircleImageView
               android:layout_width="100dp"
               android:src="@drawable/download"
               app:layout_constraintBottom_toBottomOf="parent"
               app:layout_constraintTop_toTopOf="parent"
               android:id="@+id/img"
              app:layout_constraintLeft_toLeftOf="parent"
               app:layout_constraintRight_toRightOf="parent"
               android:layout_height="70dp"/>
           <TextView
               android:layout_width="wrap_content"
               app:layout_constraintLeft_toLeftOf="@id/img"
               app:layout_constraintRight_toRightOf="@id/img"
               android:id="@+id/textAdmin"
               android:gravity="center"
               app:layout_constraintTop_toBottomOf="@id/img"
               android:text = "Admin"
               android:textSize="18dp"
               android:textStyle="bold"
               android:textColor="#fff"
               android:layout_marginTop="10dp"
               android:layout_gravity="center"
               android:layout_height="wrap_content">

           </TextView>

   </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/cardview2"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/cardview"
        android:layout_width="300dp"
        app:cardBackgroundColor="@color/brown"
        android:layout_height="150dp">
        <androidx.constraintlayout.widget.ConstraintLayout
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="100dp"
                android:src="@drawable/lawyer"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:id="@+id/imgClient"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_height="70dp"/>
            <TextView
                android:layout_width="wrap_content"
                app:layout_constraintLeft_toLeftOf="@id/imgClient"
                app:layout_constraintRight_toRightOf="@id/imgClient"
                android:id="@+id/textClient"
                android:gravity="center"
                app:layout_constraintTop_toBottomOf="@id/imgClient"
                android:text = "Client"
                android:textSize="18dp"
                android:textStyle="bold"
                android:textColor="#fff"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:layout_height="wrap_content">

            </TextView>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/cardview3"
        android:layout_width="300dp"
        app:layout_constraintTop_toBottomOf="@id/cardview2"
        app:cardBackgroundColor="@color/brown"
        android:layout_marginTop="10dp"
        android:layout_height="150dp">
        <androidx.constraintlayout.widget.ConstraintLayout
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="100dp"
                android:src="@drawable/law"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:id="@+id/imglaw"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_height="70dp"/>
            <TextView
                android:layout_width="wrap_content"
                app:layout_constraintLeft_toLeftOf="@id/imglaw"
                app:layout_constraintRight_toRightOf="@id/imglaw"
                android:id="@+id/textLaw"
                android:gravity="center"
                app:layout_constraintTop_toBottomOf="@id/imglaw"
                android:text = "Lawyer"
                android:textSize="18dp"
                android:textStyle="bold"
                android:textColor="#fff"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:layout_height="wrap_content">

            </TextView>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>